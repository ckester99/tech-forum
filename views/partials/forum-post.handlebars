<div class="mt-4 rounded-md shadow-slate-500 shadow-lg forum-post" post={{id}} user-id={{user.id}}>
    <div class="bg-gray-900 flex justify-between items-center py-3 px-8 w-full text-green-500 rounded-t-md">
        <h2 class="font-bold text-lg">{{title}}</h2>
        <p>Posted by {{user.username}} on {{formatDate timestamp}}</p>
    </div>
    <div class="bg-green-500 text-gray-900 py-3 px-8 font-semibold rounded-b-md relative content-display" style="min-height: 15vh;">
        {{content}}
    </div>
</div>

{{! <i class="fa-regular fa-trash-can text-xl absolute bottom-0 right-0 mr-3.5 mb-3.5 hover:text-green-300 hover:cursor-pointer delete-comment"></i> }}